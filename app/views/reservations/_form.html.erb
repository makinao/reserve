<%= form_with model: @reservation, method: :get, url:reservations_confirm_path(@room), local: true do |f| %>
    <table>

       <tr>
         <th><%= f.label :start_date ,"チェックイン" %></th>
         <td><%= f.date_field :start_date %></td>
       </tr>
    
       <tr>
         <th><%= f.label :end_date ,"チェックアウト" %></th>
         <td><%= f.date_field :end_date %></td>
       </tr>
       <tr>
         <th><%= f.label :people ,"人数" %></th>
         <td><%= f.text_field :people,  placeholder: "0" %>人</td>
       </tr>

        <%= f.hidden_field:room_id, value:@room.id %>
        <%= f.hidden_field:user_id, value:current_user.id %>
        
         <td><%= f.submit "予約確認画面へ"  %></td>
    
    <% end %>