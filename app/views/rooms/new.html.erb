<h3>ユーザー新規作成</h3>

  <% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
  <% end %>

 <%= form_with model: @room do |f| %>
   <table>
     <tr>
       <th><%= f.label :name ,"施設名" %></th>
       <td><%= f.text_field :name, placeholder:"ルーム名を入力" %></td>
     </tr>
 
     <tr>
       <th><%= f.label :content ,"施設詳細" %></th>
       <td><%= f.text_area :content, placeholder:"施設詳細を入力" %></td>
     </tr>
 
     <tr>
       <th><%= f.label :money ,"料金" %></th>
       <td><%= f.text_field :money, placeholder:"一日あたりの料金を入力" %></td>
     </tr>
 
     <tr>
       <th><%= f.label :address ,"住所" %></th>
       <td><%= f.text_field :address, placeholder:"住所を入力" %></td>
     </tr>

     <tr>
       <th><%= f.label :home_image ,"施設画像" %></th>
       <td><%= f.file_field :home_image, placeholder:"画像をアップロード", class: "home_image" %></td>
     </tr>
   </table>
   
   <div>
     <ul>
       <li><%= f.submit "保存する"%></li>
       <li><%= link_to "キャンセル", :back %></li>
     </ul>
   </div>
 <% end %>