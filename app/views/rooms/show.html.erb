<h3>施設詳細</h3>

<%= alert %>
<%= render "rooms/shared/error", model:@reservation %>

<div>
  <ul>
    <li><%= link_to "直前に戻る", :back %></li>
  </ul>
  </div>

<table>
  <tr>
    <th>画像</th>
    <td>
      <% if @room.home_image? %>
          <%= image_tag @room.home_image.url, class:'home_image' %>
      <% else %>
          <%= image_tag '/assets/default-home.png',:alt => '施設画像', class:'home_image' %>
      <% end %>
    </td>
  </tr>
  <tr>
    <th>施設名</th>
    <td><%= @room.name %></td>
  </tr>
  <tr>
    <th>紹介文</th>
    <td><%= @room.content %></td>
  </tr>
  <tr>
    <th>料金</th>
    <td><%= @room.money %></td>
  </tr>
</table>

<%= form_with model: @reservation, method: :get, url:reservations_confirm_path(@room), local: true do |f| %>
  <%= render 'rooms/shared/error', model: f.object %>
    <table>

       <tr>
         <th><%= f.label :start_date ,"チェックイン" %></th>
         <td><%= f.date_field :start_date %></td>
       </tr>
    
       <tr>
         <th><%= f.label :end_date ,"チェックアウト" %></th>
         <td><%= f.date_field :end_date %></td>
       </tr>
       <tr>
         <th><%= f.label :people ,"人数" %></th>
         <td><%= f.text_field :people,  placeholder: "0" %>人</td>
       </tr>

        <%= f.hidden_field:room_id, value:@room.id %>
        <%= f.hidden_field:user_id, value:current_user.id %>

         <td><%= f.submit "予約確認画面へ"  %></td>

    </table>
    
<% end %>