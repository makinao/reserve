<h3>プロフィール編集</h3>

<%= form_with model: @user, url: users_profile_path do |f| %>
    <table>
      <tr>
        <th><%= f.label :image ,"アイコン画像" %></th>
        <td><%= f.file_field :image %></td>
      </tr>

      <tr>
        <th><%= f.label :name ,"名前" %></th>
        <td><%= f.text_field :name %></td>
      </tr>

      <tr>
        <th><%= f.label :introduction ,"自己紹介" %></th>
        <td><%= f.text_area :introduction %></td>
      </tr>

    </table>

    <div>
      <ul>
        <li><%= f.submit "編集を完了する" %></li>
        <li><%= link_to "キャンセル", :back %></li>
      </ul>
    </div>

    <% if @user.errors.any? %>
      <div class="error_exclamation">
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
<% end %>