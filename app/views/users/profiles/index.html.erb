<h2>プロフィール</h2>

<table>
  <tr>
    <th>アイコン画像</th>
    <td>
      <% if @users.image? %>
           <%= image_tag @users.image.url , class: 'profile' %>
        <% else %>
          <%= image_tag '/assets/default-avatar.png',alt: 'プロフィール画像', class: 'profile' %>
      <% end %>
    </td>
  </tr>

  <tr>
    <th>名前</th>
    <td><%= @users.name %></td>
  </tr>

  <tr>
    <th>自己紹介</th>
    <td><%= @users.introduction %></td>
  </tr>

  <tr>
     <th>編集</th>
     <td><%= link_to "編集", edit_users_profile_path(current_user) %></td>
   </tr>

   <tr>
     <th>アカウント</th>
     <td><%= link_to "アカウントペーシへ", users_accounts_index_path %></td>
   </tr>
   
</table>